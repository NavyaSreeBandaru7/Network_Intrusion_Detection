    <script>
        // Core NIDS functionality
        class NetworkIntrusionDetectionSystem {
            constructor() {
                this.isMonitoring = false;
                this.isPaused = false;
                this.startTime = null;
                this.connections = [];
                this.threats = [];
                this.logs = [];
                this.config = {
                    mode: 'hybrid',
                    sensitivity: 'medium',
                    interface: 'all',
                    rules: []
                };
                this.stats = {
                    packetsAnalyzed: 0,
                    threatsBlocked: 0,
                    falsePositives: 0,
                    cpuUsage: 0,
                    memoryUsage: 0
                };
                
                this.initializeCharts();
                this.startStatsUpdater();
                this.loadMLModels();
            }

            // Machine Learning Integration
            loadMLModels() {
                this.addLog('info', 'Loading machine learning models...');
                setTimeout(() => {
                    this.addLog('success', 'AI detection models loaded successfully');
                    this.addLog('info', 'LSTM network initialized for sequence analysis');
                    this.addLog('info', 'Random Forest model loaded for classification');
                }, 2000);
            }

            // NLP-based log analysis
            analyzeLogWithNLP(logText) {
                const threatKeywords = [
                    'attack', 'intrusion', 'malware', 'virus', 'trojan', 
                    'phishing', 'ddos', 'exploit', 'vulnerability', 'breach',
                    'unauthorized', 'suspicious', 'anomaly', 'injection'
                ];
                
                const severity = threatKeywords.filter(keyword => 
                    logText.toLowerCase().includes(keyword)
                ).length;
                
                if (severity > 3) return 'high';
                if (severity > 1) return 'medium';
                return 'low';
            }

            // Advanced packet analysis simulation
            analyzePacket(packet) {
                const analysis = {
                    timestamp: new Date(),
                    sourceIP: this.generateRandomIP(),
                    destIP: this.generateRandomIP(),
                    port: Math.floor(Math.random() * 65535),
                    protocol: ['TCP', 'UDP', 'ICMP'][Math.floor(Math.random() * 3)],
                    size: Math.floor(Math.random() * 1500) + 64,
                    threatLevel: 'low'
                };

                // Simulate threat detection
                if (Math.random() < 0.05) { // 5% chance of threat
                    analysis.threatLevel = 'high';
                    analysis.threatType = this.getRandomThreatType();
                    this.handleThreat(analysis);
                } else if (Math.random() < 0.15) { // 15% chance of suspicious activity
                    analysis.threatLevel = 'medium';
                    analysis.threatType = 'Suspicious Activity';
                }

                return analysis;
            }

            getRandomThreatType() {
                const threatTypes = [
                    'SQL Injection', 'Cross-site Scripting', 'DDoS Attack',
                    'Port Scanning', 'Brute Force', 'Malware', 'Phishing',
                    'Man-in-the-Middle', 'Buffer Overflow', 'Zero-day Exploit'
                ];
                return threatTypes[Math.floor(Math.random() * threatTypes.length)];
            }

            handleThreat(threat) {
                this.threats.push(threat);
                this.stats.threatsBlocked++;
                
                const logMessage = `THREAT DETECTED: ${threat.threatType} from ${threat.sourceIP}:${threat.port}`;
                this.addLog('danger', logMessage);
                
                // Show notification
                this.showNotification('danger', `Threat Blocked: ${threat.threatType}`);
                
                // Update UI
                document.getElementById('threatCount').textContent = this.threats.length;
                
                // Simulate automated response
                setTimeout(() => {
                    this.addLog('success', `Automated response: IP ${threat.sourceIP} temporarily blocked`);
                }, 1000);
            }

            generateRandomIP() {
                return `${Math.floor(Math.random() * 255)}.${Math.floor(Math.random() * 255)}.${Math.floor(Math.random() * 255)}.${Math.floor(Math.random() * 255)}`;
            }

            startMonitoring() {
                if (this.isMonitoring && !this.isPaused) return;
                
                this.isMonitoring = true;
                this.isPaused = false;
                this.startTime = new Date();
                
                document.getElementById('startBtn').style.display = 'none';
                document.getElementById('pauseBtn').style.display = 'inline-flex';
                document.getElementById('stopBtn').style.display = 'inline-flex';
                document.getElementById('networkStatus').textContent = 'Monitoring';
                document.getElementById('networkStatus').parentElement.className = 'status-card active';
                
                this.addLog('success', 'Network monitoring started - All systems operational');
                this.showNotification('success', 'Monitoring Started');
                
                // Start packet analysis simulation
                this.monitoringInterval = setInterval(() => {
                    if (!this.isPaused) {
                        this.simulateTraffic();
                    }
                }, 100);
                
                // Start uptime counter
                this.uptimeInterval = setInterval(() => {
                    this.updateUptime();
                }, 1000);
            }

            pauseMonitoring() {
                this.isPaused = !this.isPaused;
                const pauseBtn = document.getElementById('pauseBtn');
                
                if (this.isPaused) {
                    pauseBtn.innerHTML = '<i class="fas fa-play"></i> Resume';
                    pauseBtn.className = 'btn btn-success';
                    document.getElementById('networkStatus').textContent = 'Paused';
                    document.getElementById('networkStatus').parentElement.className = 'status-card warning';
                    this.addLog('warning', 'Monitoring paused by user');
                    this.showNotification('warning', 'Monitoring Paused');
                } else {
                    pauseBtn.innerHTML = '<i class="fas fa-pause"></i> Pause';
                    pauseBtn.className = 'btn btn-warning';
                    document.getElementById('networkStatus').textContent = 'Monitoring';
                    document.getElementById('networkStatus').parentElement.className = 'status-card active';
                    this.addLog('info', 'Monitoring resumed');
                    this.showNotification('info', 'Monitoring Resumed');
                }
            }

            stopMonitoring() {
                this.isMonitoring = false;
                this.isPaused = false;
                
                if (this.monitoringInterval) clearInterval(this.monitoringInterval);
                if (this.uptimeInterval) clearInterval(this.uptimeInterval);
                
                document.getElementById('startBtn').style.display = 'inline-flex';
                document.getElementById('pauseBtn').style.display = 'none';
                document.getElementById('stopBtn').style.display = 'none';
                document.getElementById('networkStatus').textContent = 'Stopped';
                document.getElementById('networkStatus').parentElement.className = 'status-card';
                
                this.addLog('info', 'Network monitoring stopped');
                this.showNotification('info', 'Monitoring Stopped');
            }

            simulateTraffic() {
                // Simulate multiple packets per cycle
                const packetCount = Math.floor(Math.random() * 5) + 1;
                
                for (let i = 0; i < packetCount; i++) {
                    const packet = this.analyzePacket();
                    this.stats.packetsAnalyzed++;
                }
                
                // Update connection count
                this.connections.push({
                    id: Date.now() + Math.random(),
                    timestamp: new Date(),
                    active: true
                });
                
                // Remove old connections
                this.connections = this.connections.filter(conn => 
                    Date.now() - conn.timestamp < 300000 // 5 minutes
                );
                
                document.getElementById('connectionCount').textContent = this.connections.length;
                
                // Update charts
                this.updateCharts();
            }

            updateUptime() {
                if (!this.startTime) return;
                
                const now = new Date();
                const diff = now - this.startTime;
                
                const hours = Math.floor(diff / 3600000);
                const minutes = Math.floor((diff % 3600000) / 60000);
                const seconds = Math.floor((diff % 60000) / 1000);
                
                document.getElementById('uptime').textContent = 
                    `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            }

            addLog(type, message) {
                const timestamp = new Date().toLocaleString();
                const logEntry = {
                    timestamp,
                    type,
                    message: this.analyzeLogWithNLP(message) === 'high' ? `🚨 ${message}` : message
                };
                
                this.logs.push(logEntry);
                
                const logContainer = document.getElementById('activityLog');
                const logElement = document.createElement('div');
                logElement.className = `log-entry log-${type}`;
                logElement.innerHTML = `<strong>[${timestamp}]</strong> ${logEntry.message}`;
                
                logContainer.appendChild(logElement);
                logContainer.scrollTop = logContainer.scrollHeight;
                
                // Limit log entries
                if (this.logs.length > 1000) {
                    this.logs.shift();
                    logContainer.removeChild(logContainer.firstChild);
                }
            }

            startStatsUpdater() {
                setInterval(() => {
                    // Simulate system resource usage
                    this.stats.cpuUsage = Math.min(100, Math.max(0, this.stats.cpuUsage + (Math.random() - 0.5) * 10));
                    this.stats.memoryUsage = Math.min(100, Math.max(0, this.stats.memoryUsage + (Math.random() - 0.5) * 5));
                    
                    document.getElementById('cpuUsage').style.width = `${this.stats.cpuUsage}%`;
                    document.getElementById('cpuUsage').textContent = `CPU: ${Math.round(this.stats.cpuUsage)}%`;
                    
                    document.getElementById('memoryUsage').style.width = `${this.stats.memoryUsage}%`;
                    document.getElementById('memoryUsage').textContent = `Memory: ${Math.round(this.stats.memoryUsage)}%`;
                }, 2000);
            }

            showNotification(type, message) {
                const notification = document.createElement('div');
                notification.className = `notification ${type}`;
                notification.textContent = message;
                
                document.body.appendChild(notification);
                
                setTimeout(() => notification.classList.add('show'), 100);
                setTimeout(() => {
                    notification.classList.remove('show');
                    setTimeout(() => document.body.removeChild(notification), 300);
                }, 3000);
            }

            initializeCharts() {
                // Traffic Chart
                const trafficCtx = document.getElementById('trafficChart').getContext('2d');
                this.trafficData = Array(50).fill(0);
                
                // Threat Chart  
                const threatCtx = document.getElementById('threatChart').getContext('2d');
                this.threatData = {
                    'SQL Injection': 0,
                    'XSS': 0,
                    'DDoS': 0,
                    'Port Scan': 0,
                    'Malware': 0,
                    'Other': 0
                };
            }

            updateCharts() {
                // Update traffic chart
                this.trafficData.shift();
                this.trafficData.push(Math.floor(Math.random() * 100));
                this.drawTrafficChart();
                
                // Update threat chart occasionally
                if (Math.random() < 0.1) {
                    const threats = Object.keys(this.threatData);
                    const randomThreat = threats[Math.floor(Math.random() * threats.length)];
                    this.threatData[randomThreat]++;
                    this.drawThreatChart();
                }
            }

            drawTrafficChart() {
                const canvas = document.getElementById('trafficChart');
                const ctx = canvas.getContext('2d');
                const width = canvas.width;
                const height = canvas.height;
                
                ctx.clearRect(0, 0, width, height);
                
                // Draw grid
                ctx.strokeStyle = '#334155';
                ctx.lineWidth = 1;
                for (let i = 0; i < 10; i++) {
                    const y = (height / 10) * i;
                    ctx.beginPath();
                    ctx.moveTo(0, y);
                    ctx.lineTo(width, y);
                    ctx.stroke();
                }
                
                // Draw line
                ctx.strokeStyle = '#2563eb';
                ctx.lineWidth = 2;
                ctx.beginPath();
                
                this.trafficData.forEach((value, index) => {
                    const x = (width / (this.trafficData.length - 1)) * index;
                    const y = height - (height * value / 100);
                    
                    if (index === 0) {
                        ctx.moveTo(x, y);
                    } else {
                        ctx.lineTo(x, y);
                    }
                });
                
                ctx.stroke();
                
                // Fill area under curve
                ctx.fillStyle = 'rgba(37, 99, 235, 0.1)';
                ctx.lineTo(width, height);
                ctx.lineTo(0, height);
                ctx.closePath();
                ctx.fill();
            }

            drawThreatChart() {
                const canvas = document.getElementById('threatChart');
                const ctx = canvas.getContext('2d');
                const width = canvas.width;
                const height = canvas.height;
                
                ctx.clearRect(0, 0, width, height);
                
                const total = Object.values(this.threatData).reduce((a, b) => a + b, 0);
                if (total === 0) return;
                
                const colors = ['#dc2626', '#d97706', '#059669', '#2563eb', '#7c3aed', '#db2777'];
                let currentAngle = -Math.PI / 2;
                
                Object.entries(this.threatData).forEach(([threat, count], index) => {
                    if (count === 0) return;
                    
                    const sliceAngle = (count / total) * 2 * Math.PI;
                    
                    ctx.fillStyle = colors[index % colors.length];
                    ctx.beginPath();
                    ctx.moveTo(width / 2, height / 2);
                    ctx.arc(width / 2, height / 2, Math.min(width, height) / 3, currentAngle, currentAngle + sliceAngle);
                    ctx.closePath();
                    ctx.fill();
                    
                    // Draw label
                    const labelAngle = currentAngle + sliceAngle / 2;
                    const labelX = width / 2 + Math.cos(labelAngle) * (Math.min(width, height) / 5);
                    const labelY = height / 2 + Math.sin(labelAngle) * (Math.min(width, height) / 5);
                    
                    ctx.fillStyle = '#f1f5f9';
                    ctx.font = '12px Arial';
                    ctx.textAlign = 'center';
                    ctx.fillText(count.toString(), labelX, labelY);
                    
                    currentAngle += sliceAngle;
                });
            }
        }

        // Global NIDS instance
        let nids;

        // Initialize system when page loads
        document.addEventListener('DOMContentLoaded', function() {
            nids = new NetworkIntrusionDetectionSystem();
            
            // Initialize threshold slider
            const thresholdSlider = document.getElementById('alertThreshold');
            const thresholdValue = document.getElementById('thresholdValue');
            
            thresholdSlider.addEventListener('input', function() {
                thresholdValue.textContent = this.value;
            });
        });

        // Control functions
        function startMonitoring() {
            nids.startMonitoring();
        }

        function pauseMonitoring() {
            nids.pauseMonitoring();
        }

        function stopMonitoring() {
            nids.stopMonitoring();
        }

        function applyConfiguration() {
            const mode = document.getElementById('detectionMode').value;
            const sensitivity = document.getElementById('sensitivityLevel').value;
            const interface = document.getElementById('monitorInterface').value;
            const rules = document.getElementById('customRules').value;
            
            nids.config = { mode, sensitivity, interface, rules };
            
            nids.addLog('info', `Configuration updated: Mode=${mode}, Sensitivity=${sensitivity}, Interface=${interface}`);
            nids.showNotification('success', 'Configuration Applied');
            
            if (rules.trim()) {
                nids.addLog('info', `Custom rules loaded: ${rules.split('\n').length} rules`);
            }
        }

        function exportLogs() {
            const logData = nids.logs.map(log => 
                `[${log.timestamp}] ${log.type.toUpperCase()}: ${log.message}`
            ).join('\n');
            
            const blob = new Blob([logData], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `nids-logs-${new Date().toISOString().split('T')[0]}.txt`;
            a.click();
            URL.revokeObjectURL(url);
            
            nids.showNotification('success', 'Logs Exported');
        }

        function clearLogs() {
            nids.logs = [];
            document.getElementById('activityLog').innerHTML = '';
            nids.addLog('info', 'Log history cleared');
            nids.showNotification('info', 'Logs Cleared');
        }

        function filterLogs() {
            const filter = prompt('Enter filter criteria (info, warning, danger, success):');
            if (!filter) return;
            
            const logContainer = document.getElementById('activityLog');
            const entries = logContainer.children;
            
            for (let entry of entries) {
                if (entry.className.includes(filter.toLowerCase())) {
                    entry.style.display = 'block';
                } else {
                    entry.style.display = 'none';
                }
            }
            
            nids.showNotification('info', `Logs filtered by: ${filter}`);
        }

        function showSettings() {
            document.getElementById('settingsModal').style.display = 'block';
        }

        function closeModal() {
            document.getElementById('settingsModal').style.display = 'none';
        }

        function saveSettings() {
            const alertThreshold = document.getElementById('alertThreshold').value;
            const logRetention = document.getElementById('logRetention').value;
            const emailAlerts = document.getElementById('emailAlerts').value;
            const aiModel = document.getElementById('aiModel').value;
            
            const settings = {
                alertThreshold,
                logRetention,
                emailAlerts,
                aiModel
            };
            
            // Store settings in memory (localStorage not available in artifacts)
            nids.settings = settings;
            
            nids.addLog('success', `Settings saved: Threshold=${alertThreshold}%, Retention=${logRetention} days, AI Model=${aiModel}`);
            nids.showNotification('success', 'Settings Saved');
            closeModal();
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('settingsModal');
            if (event.target === modal) {
                closeModal();
            }
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey) {
                switch(e.key) {
                    case 's':
                        e.preventDefault();
                        if (nids.isMonitoring) {
                            stopMonitoring();
                        } else {
                            startMonitoring();
                        }
                        break;
                    case 'p':
                        e.preventDefault();
                        if (nids.isMonitoring) {
                            pauseMonitoring();
                        }
                        break;
                    case 'e':
                        e.preventDefault();
                        exportLogs();
                        break;
                    case 'c':
                        e.preventDefault();
                        clearLogs();
                        break;
                }
            }
        });

        // Add some demo data on startup
        setTimeout(() => {
            if (nids) {
                nids.addLog('info', 'Loading signature database...');
                setTimeout(() => {
                    nids.addLog('success', 'Signature database loaded: 45,231 known threats');
                    nids.addLog('info', 'Anomaly detection baseline established');
                    nids.addLog('info', 'Machine learning models calibrated');
                    nids.addLog('success', 'System ready for monitoring');
                }, 1500);
            }
        }, 1000);
    </script>
</body>
</html>
